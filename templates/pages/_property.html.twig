<div class="col-3">
    <div class="card mb-4">
        {% if property.filename %}
            <img src=" {{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="card-img-top" style="width: 100%;height: 140px;">
        {% else %}
            <img src=" {{ asset('images/properties/room.jpg')  }}" alt="card-img-top" style="width: 100%;height: 140px;">
        {% endif %}


        <div class="card-body">
            <h5 class="card-title">
                <a href="{{ path('property.show',{id:property.id, slug:property.slug}) }}">{{ property.title }}</a>
            </h5>
            <p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
            <div class="text-primary">{{ property.formattedPrice }} â‚¬</div>
        </div>
    </div>
</div>