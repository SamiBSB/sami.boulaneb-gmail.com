{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block body %}

    <div class="container">
        <div class="row justify-content-center">
            <h1>Inscription </h1>
        </div>
        {{form_start(form)}}

        <div class="col-md-12">
            {{form_row(form.username,{"label":"Nom d\'utilisateur","attr": {"placeholder": "Mettez votre nom"}})}}
        </div>
        <div class="col-md-12">
            {{form_row(form.email,{"label":"Adresse mail","attr": {"placeholder": "Mettez votre email"}})}}
        </div>
        <div class="col-md-12">
            {{form_row(form.password,{"label":"Mot de passe","attr": {"placeholder": "Mettez votre mot de passe"}})}}
        </div>

        <div class="col-md-12">
            {{form_row(form.confirm_password,{"label":"Mot de passe","attr": {"placeholder": "Confirmez votre Mot de passe"}})}}
        </div>
        <button type="submit" class="btn btn-danger">
            Inscription
        </button>
        {{form_end(form)}}
    </div>
{% endblock %}