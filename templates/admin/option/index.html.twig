{% extends 'base.html.twig' %}

{% block title %}Options{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Options</h1>

    <table class="table  table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for option in options %}
            <tr>
                <td>{{ option.id }}</td>
                <td>{{ option.name }}</td>
                <td>
                    <a href="{{ path('option_show', {'id': option.id}) }}" class="btn btn-secondary">show</a>
                    <a href="{{ path('option_edit', {'id': option.id}) }} "  class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('option_new') }}">Creer une nouvelle option</a>
</div>
{% endblock %}
